<%= error_messages_for @user, :header => '<h2>Unable to Signup</h2>' %>
<%= form :action => url(:users) do %>
  <%= text_field :id => 'login', :name => 'login', :label => "Login", :value => @user.login %>
  <%= text_field :id => 'email', :name => 'email', :label => "Email Address", :value => @user.email %>
  <%= submit "Create" %>
<% end =%>
